<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/item_artist_card"
    android:layout_margin="@dimen/margin_card_layout"
    android:background="@drawable/bg_card"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="@dimen/spacing_small"
        android:padding="@dimen/spacing_small"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/title_dummy"
            android:textColor="@color/card_title_text_color"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_nb_of_albums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/card_content_text_color"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            tools:text="5 albums"/>

        <TextView
            android:id="@+id/item_nb_of_tracks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/card_content_text_color"
            android:textSize="@dimen/text_size_medium"
            tools:text="13 songs"/>

    </LinearLayout>

</RelativeLayout>